<h2>
  <a href="{{originalURL}}" target="_blank" class="ars-link">{{title}}</a>
</h2>
<p>{{excerpt}} &mdash; {{author}}</p>

<hr>

<h4>Add a Comment</h4>
<form>
  <div class="form-group">
    <input type="text" id="username" class="form-control" placeholder="Anonymous">
  </div>
  <div class="form-group">
    <textarea id="commentBody" class="form-control" rows="3"></textarea>
  </div>
  <div class="text-right">
    <button type="submit" class="btn btn-secondary">Submit</button>
  </div>
</form>

<hr>

{{#each comments}}
<div class="comment row align-items-center">
  <p class="col col-10">
    {{body}} &mdash; {{user}}
    <br>
    <small>{{relativeTime date}}</small>
  </p>
  <div class="col col-2">
    <a href="#" class="delete-comment text-danger" data-id="{{_id}}"><i class="material-icons">delete_forever</i></a>
  </div>
</div>
{{/each}}

<script type="text/javascript">
  var page = "article"
  var _articleId = "{{_id}}"
</script>
